<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/product_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:maxLines="3"
        android:inputType="textMultiLine"
        android:breakStrategy="simple"
        android:scrollbars="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/safety_text"
        app:layout_constraintEnd_toStartOf="@+id/barcode_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/barcode_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:maxLines="3"
        android:inputType="textMultiLine"
        android:breakStrategy="simple"
        android:scrollbars="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/safety_text"
        app:layout_constraintStart_toEndOf="@+id/product_name_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/safety_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:lines="2"
        android:inputType="textMultiLine"
        android:breakStrategy="simple"
        android:scrollbars="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/product_name_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>