<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_edit_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="label_first_name,input_first_name,label_last_name,input_last_name,button_save_profile, button_delete_profile, allergen_box_1, allergen_box_2, allergen_box_3, allergen_box_4, allergen_box_5, allergen_box_6, allergen_box_7, allergen_box_8, allergen_box_9, allergen_box_10, allergen_box_11, allergen_box_12, allergen_box_15, button_add_custom_allergen" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_display_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="text_welcome_message,button_edit_profile, allergen_text, text_allergen_list" />


    <TextView
        android:id="@+id/label_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="First Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Enter your last name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/label_last_name"
        app:layout_constraintTop_toBottomOf="@id/label_last_name" />

    <EditText
        android:id="@+id/input_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Enter your first name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_first_name" />

    <TextView
        android:id="@+id/label_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Last Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_first_name" />


    <CheckBox
        android:id="@+id/allergen_box_1"
        style="@style/AllergenBox"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toStartOf="@+id/allergen_box_2"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_last_name"
        app:layout_constraintBottom_toTopOf="@id/allergen_box_3"
        android:text="ðŸ¥› Milk"
        />

    <CheckBox
        android:id="@+id/allergen_box_2"
        style="@style/AllergenBox"
        android:text="ðŸ¥š Egg"
        app:layout_constraintBottom_toTopOf="@id/allergen_box_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/allergen_box_4"
        app:layout_constraintTop_toBottomOf="@+id/input_last_name"
        app:layout_constraintVertical_bias="0.464" />

    <CheckBox
        android:id="@+id/allergen_box_4"
        style="@style/AllergenBox"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@id/allergen_box_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/allergen_box_3"
        app:layout_constraintTop_toTopOf="@id/allergen_box_3"
        app:layout_constraintVertical_bias="1.0"
        android:text="ðŸŒ± Soy"
        />

    <CheckBox
        android:id="@+id/allergen_box_3"
        style="@style/AllergenBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/allergen_box_4"
        app:layout_constraintTop_toBottomOf="@id/allergen_box_1"
        android:text="ðŸŒ¾ Wheat"/>


    <CheckBox
        android:id="@+id/allergen_box_5"
        style="@style/AllergenBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/allergen_box_6"
        app:layout_constraintTop_toBottomOf="@id/allergen_box_3"
        android:text="ðŸ¦ Shellfish"/>

    <CheckBox
        android:id="@+id/allergen_box_6"
        style="@style/AllergenBox"
        app:layout_constraintBottom_toBottomOf="@id/allergen_box_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/allergen_box_5"
        app:layout_constraintTop_toTopOf="@id/allergen_box_5"
        app:layout_constraintVertical_bias="1.0"
        android:text="ðŸŸ Fish"/>

    <CheckBox
        android:id="@+id/allergen_box_7"
        style="@style/AllergenBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/allergen_box_8"
        app:layout_constraintTop_toBottomOf="@id/allergen_box_5"
        android:text="ðŸ¥œ Peanut"/>

    <CheckBox
        android:id="@+id/allergen_box_8"
        style="@style/AllergenBox"
        app:layout_constraintBottom_toBottomOf="@id/allergen_box_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/allergen_box_7"
        app:layout_constraintTop_toTopOf="@id/allergen_box_7"
        app:layout_constraintVertical_bias="1.0"
        android:text="ðŸŒ° Almond"
        />

    <!-- DISPLAY MODE UI -->
    <CheckBox
        android:id="@+id/allergen_box_9"
        style="@style/AllergenBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/allergen_box_8"
        app:layout_constraintTop_toBottomOf="@id/allergen_box_7"
        android:text="ðŸŒ° Walnut"/>

    <CheckBox
        android:id="@+id/allergen_box_10"
        style="@style/AllergenBox"
        app:layout_constraintBottom_toBottomOf="@id/allergen_box_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/allergen_box_9"
        app:layout_constraintTop_toTopOf="@id/allergen_box_9"
        app:layout_constraintVertical_bias="1.0"
        android:text="ðŸŒ° Pecan"
        />
    <CheckBox
        android:id="@+id/allergen_box_11"
        style="@style/AllergenBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/allergen_box_8"
        app:layout_constraintTop_toBottomOf="@id/allergen_box_9"
        android:text="ðŸŒ° Pistachio"/>

    <CheckBox
        android:id="@+id/allergen_box_12"
        style="@style/AllergenBox"
        app:layout_constraintBottom_toBottomOf="@id/allergen_box_11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/allergen_box_11"
        app:layout_constraintTop_toTopOf="@id/allergen_box_11"
        app:layout_constraintVertical_bias="1.0"
        android:text="ðŸŒ° Hazelnut"
        />

    <CheckBox
        android:id="@+id/allergen_box_15"
        style="@style/AllergenBox"
        android:layout_marginTop="140dp"
        android:text="ðŸž Sesame"
        app:layout_constraintEnd_toEndOf="@id/allergen_box_8"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/allergen_box_7"
        app:layout_constraintTop_toBottomOf="@id/allergen_box_7" />

    <Button
        android:id="@+id/button_add_custom_allergen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Add Custom Allergen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/allergen_box_15" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_save_profile"
        android:layout_width="63dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="Save"
        app:backgroundTint="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_check_24"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/text_welcome_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Welcome,\nFirst Last" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_edit_profile"
        android:layout_width="59dp"
        android:layout_height="89dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="Edit Profile"
        app:backgroundTint="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_edit_icon_24"
        app:tint="@android:color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_delete_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#FF0000"
        android:contentDescription="Delete Profile"
        app:layout_constraintBottom_toBottomOf="@id/button_add_custom_allergen"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/outline_delete_24"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/allergen_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Your Allergens:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_welcome_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/text_allergen_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintTop_toBottomOf="@id/allergen_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="â€¢ Milk\nâ€¢ Egg\nâ€¢ Peanut" />

</androidx.constraintlayout.widget.ConstraintLayout>

